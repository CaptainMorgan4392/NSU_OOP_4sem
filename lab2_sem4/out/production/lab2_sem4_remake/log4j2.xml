<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Logger name = "Test Read" level = "trace" additivity = "true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Test Write" level = "trace" additivity = "true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Test Sort" level = "trace" additivity = "true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Test Grep" level = "trace" additivity = "true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Test Replace" level = "trace" additivity = "true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Logger name = "Test Dump" level = "trace" additivity = "true">
            <AppenderRef ref="Console"/>
        </Logger>
        <Root level="trace">
            <AppenderRef ref="Console"/>
        </Root>
    </Loggers>
</Configuration>